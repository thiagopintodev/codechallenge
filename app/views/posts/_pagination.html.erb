<nav class="my-3" aria-label="Pagination">
  <ul class="pagination">
  	<% if @page > 1 %>
	    <li class="page-item"><%= link_to 'Previous', posts_path(page: @page-1), class:"page-link" %></li>
	<% else %>
		<li class="page-item disabled">
	      <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
	    </li>
	<% end %>
	<% @pages.each do |page| %>
		<% is_active = page == @page %>
	    <li
		    class="page-item <%= 'active' if is_active %>"
		    <%= 'aria-current="true"' if is_active %>
	    	>
	    		<%= link_to page, posts_path(page: page), class:"page-link" %>
	    </li>
    <% end -%>
  	<% if @page < @pages.last %>
	    <li class="page-item"><%= link_to 'Next', posts_path(page: @page+1), class:"page-link" %></li>
	<% else %>
		<li class="page-item disabled">
	      <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next</a>
	    </li>
	<% end %>
  </ul>
</nav>
